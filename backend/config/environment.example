# Dartmaster Appwrite Configuration
# Copy this file to .env.local for development

# Appwrite Configuration
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=dartmaster-prod
NEXT_PUBLIC_APPWRITE_DATABASE_ID=main

# Collection IDs
NEXT_PUBLIC_PROFILES_COLLECTION_ID=profiles
NEXT_PUBLIC_SESSIONS_COLLECTION_ID=sessions
NEXT_PUBLIC_CLUBS_COLLECTION_ID=clubs
NEXT_PUBLIC_RECOVERY_TOKENS_COLLECTION_ID=recovery_tokens
NEXT_PUBLIC_AUDIT_LOGS_COLLECTION_ID=audit_logs

# Storage Bucket IDs
NEXT_PUBLIC_AVATARS_BUCKET_ID=avatars
NEXT_PUBLIC_CLUB_LOGOS_BUCKET_ID=club_logos

# Function IDs
NEXT_PUBLIC_AUTH_HANDLER_FUNCTION_ID=auth-handler
NEXT_PUBLIC_PROFILE_MANAGER_FUNCTION_ID=profile-manager
NEXT_PUBLIC_PASSWORD_RECOVERY_FUNCTION_ID=password-recovery
NEXT_PUBLIC_SESSION_CLEANUP_FUNCTION_ID=session-cleanup

# Server-side Configuration (for functions)
APPWRITE_API_KEY=your-api-key-here
APPWRITE_FUNCTION_ENDPOINT=https://cloud.appwrite.io/v1

# Security Configuration
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here
HASH_SALT=your-hash-salt-here

# Email Configuration (for password recovery)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@dartmaster.app
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=noreply@dartmaster.app
FROM_NAME=Dartmaster

# Application Configuration
APP_NAME=Dartmaster
APP_URL=https://dartmaster.app
SUPPORT_EMAIL=support@dartmaster.app

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Session Configuration
SESSION_DURATION=86400
REMEMBER_ME_DURATION=2592000
MAX_SESSIONS_PER_USER=10

# File Upload Configuration
MAX_AVATAR_SIZE=2097152
MAX_LOGO_SIZE=1048576
ALLOWED_AVATAR_TYPES=jpg,jpeg,png,webp
ALLOWED_LOGO_TYPES=jpg,jpeg,png,svg,webp

# Development/Production Flags
NODE_ENV=development
DEBUG_MODE=true
ENABLE_AUDIT_LOGS=true
ENABLE_EMAIL_VERIFICATION=true

# Analytics and Monitoring (optional)
ANALYTICS_ENABLED=false
SENTRY_DSN=your-sentry-dsn-here
MONITORING_ENDPOINT=your-monitoring-endpoint-here